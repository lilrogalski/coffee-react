@require "variables"

html
  height 100%
  overflow hidden

*
  margin 0
  padding 0
  box-sizing border-box
  cursor inherit

body
  font font
  background bg-color
  color text-color
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden
  -webkit-user-select none
  cursor default

label
  color text-color
  display block
  text-align center
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  margin margin 0 0
  padding margin 0 0
  flex-grow 0
  flex-shrink 0 

::-webkit-scrollbar
  display none

      
select
  font font
  -webkit-appearance none
  outline none
  background #fff
  border-radius 0
  border 0
  padding 0 (margin / 2)
  min-width 30px
  text-align -webkit-center
  color text-color

button
  outline none
  background bg-color
  border-radius 0
  border 0
  padding 0 margin
  height 30px
  color text-color
  -webkit-transition background animation-speed, color animation-speed

  &:hover
    background ctrl-bg-color

.ui
  margin margin
  flex-grow 0

.app,
.row,
.column
  display flex
  justify-content space-around
  flex-grow 1
  position relative

.app
  flex-flow column nowrap
  width 100%
  height 100%
  min-width 720px

.row,
.column
  align-items stretch
  justify-content space-around
  flex-basis 100%

.row
  flex-flow row nowrap

.column
  flex-flow column nowrap

.row.playback
  flex-basis 30px
  flex-shrink 0
  flex-grow 0

.column.sidebar
  flex-basis auto
  flex-shrink 0
  flex-grow 0

.row.sequence
  height 100%

.row.instrument
  flex-basis 263px
  flex-shrink 0
  flex-grow 0
  justify-content flex-start
  overflow-x scroll

.pull-left
  float left

.pull-right
  float right
